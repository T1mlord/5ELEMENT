<UserControl x:Class="ООО__5ELEMENT_.Resources.SystemResources.IngridientTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ООО__5ELEMENT_.Resources.SystemResources"
             mc:Ignorable="d" 
             d:DesignHeight="148" d:DesignWidth="148">
    <Grid HorizontalAlignment="Left" Width="148" Height="148" VerticalAlignment="Top">
        <Grid Background="#FF5CE1E6" Height="138" Margin="5">
            <Label Panel.ZIndex="2" Width="148" Height="148" MouseDoubleClick="Label_MouseDoubleClick" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom" FontFamily="Comic Sans MS" FontSize="20"/>
        <TextBlock Panel.ZIndex="1" x:Name="TextBlock_Name" Text="Название индридиента" FontFamily="Comic Sans MS" FontSize="20" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Bottom" Foreground="OrangeRed" TextAlignment="Center"/>
        <TextBox Panel.ZIndex="3" Width="100" Height="30" x:Name="TextBox_Quantity" FontFamily="Comic Sans MS" FontSize="15" PreviewTextInput="TextBox_PreviewTextInput_VerificationNumbers" VerticalAlignment="Top"/>
    </Grid>
    </Grid>
</UserControl>
