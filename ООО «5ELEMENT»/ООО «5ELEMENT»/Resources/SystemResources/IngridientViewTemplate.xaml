<UserControl x:Class="ООО__5ELEMENT_.Resources.SystemResources.IngridientViewTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ООО__5ELEMENT_.Resources.SystemResources"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="590">
    <Grid HorizontalAlignment="Left" Width="590" Height="150" VerticalAlignment="Top">
        <Grid Background="#FF5CE1E6" Height="140" Margin="5">
            <TextBlock x:Name="TextBlock_Name" Text="Название" FontFamily="Comic Sans MS" FontSize="30" Foreground="OrangeRed" Grid.Column="0" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center"/>
            <TextBlock x:Name="TextBlock_Quantity" Text="Количество" FontFamily="Comic Sans MS" FontSize="30" Foreground="OrangeRed" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Bottom" TextAlignment="Center"/>
            <Label Grid.Row="0" Grid.Column="0" MouseDoubleClick="Label_MouseDoubleClick"/>
        </Grid>
    </Grid>
</UserControl>
