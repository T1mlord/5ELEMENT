<Page x:Class="ООО__5ELEMENT_.Pages.Tables.Page_Order_Work"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ООО__5ELEMENT_.Pages.Tables"
      mc:Ignorable="d" 
      d:DesignHeight="370" d:DesignWidth="300"
      Title="Page_Order_Work">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="250"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="DataGrid_Cart" Grid.Row="0" CanUserResizeRows="False"/>
        <StackPanel x:Name="StackPanel_Buttons" Grid.Row="1">
            <Button x:Name="Button_Clear" Height="30" Width="200" Content="Очистить" FontFamily="Comic Sans MS" Click="Button_Clear_Click" Background="#FFC7D0D9" Foreground="Black" FontSize="20"/>
            <Button x:Name="Button_Confirm" Height="90" Width="200" FontFamily="Comic Sans MS" FontSize="20" Background="#FFC7D0D9" Foreground="Black" Click="Button_Confirm_Click">
                <TextBlock x:Name="TextBlock_Button_Confirm_Text" Text="Подтвердить заказ" TextWrapping="Wrap"/>
            </Button>
        </StackPanel>
    </Grid>
</Page>
