<Page x:Class="ООО__5ELEMENT_.Pages.Employees.Admin.Dishes.Page_Dish_Ingridients"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ООО__5ELEMENT_.Pages.Employees.Admin.Dishes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_Dish_Ingridients">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400*"/>
            <ColumnDefinition Width="200*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer> 
            <WrapPanel x:Name="StackPanel_Ingridients"/>
        </ScrollViewer>
        <DataGrid x:Name="DataGrid_TablePart" Grid.Column="1" CanUserResizeRows="False" Height="350" VerticalAlignment="Top"/>
        <StackPanel x:Name="StackPanel_Buttons" Grid.Column="1" VerticalAlignment="Bottom">
            <Button x:Name="Button_Clear" Height="30" Width="200" Content="Очистить" FontFamily="Comic Sans MS" Click="Button_Clear_Click" Background="#FFC7D0D9" Foreground="Black"/>
            <Button x:Name="Button_Confirm" Height="60" Width="200" Content="Подтвердить состав" FontFamily="Comic Sans MS" Background="#FFC7D0D9" Foreground="Black" Click="Button_Confirm_Click"/>
        </StackPanel>

    </Grid>
</Page>
