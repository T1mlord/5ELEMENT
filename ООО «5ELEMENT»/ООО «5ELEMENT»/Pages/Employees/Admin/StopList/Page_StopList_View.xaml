<Page x:Class="ООО__5ELEMENT_.Pages.Employees.Admin.StopList.Page_StopList_View"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ООО__5ELEMENT_.Pages.Employees.Admin.StopList"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Title="Page_StopList_View">

    <Grid>
        <StackPanel>
            <DataGrid x:Name="DataGrid_StopList" Width="800" Height="320"/>
            <Grid>
                <Button x:Name="Button_Print" Height="30" Width="200" HorizontalAlignment="Left" Content="Распечатать стоп-лист" FontFamily="Comic Sans MS" Click="Button_Print_Click" Background="#FFC7D0D9" Foreground="Black"/>
                <Button x:Name="Button_BackUp" Height="30" Width="200" HorizontalAlignment="Right" Content="Резервное копирование базы" FontFamily="Comic Sans MS" Click="Button_BackUp_Click" Background="#FFC7D0D9" Foreground="Black"/>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
